<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.formakidov.itechturvotestproject.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.formakidov.itechturvotestproject.MapsActivity"/>

    <View
        android:id="@+id/background_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#000000"/>

    <LinearLayout
        android:translationY="-100dp"
        android:layout_marginTop="24dp"
        android:id="@+id/bottom_sheet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_toolbar_height">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_close_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Slide down to close"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <com.formakidov.itechturvotestproject.BottomSheetView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        app:behavior_peekHeight="208dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <com.formakidov.itechturvotestproject.TurvoLendingWebView
            android:id="@+id/bs_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.formakidov.itechturvotestproject.BottomSheetView>

</android.support.design.widget.CoordinatorLayout>
